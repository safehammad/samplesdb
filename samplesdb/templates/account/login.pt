<!--[if gt IE 8]><!--> <html class="no-js" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">
<!--<![endif]-->
<head metal:use-macro="view.master.head">
  <span tal:omit-tag="True" metal:fill-slot="title">Login</span>
</head>
<body>
  <nav metal:use-macro="view.master.top_bar">
    <span tal:omit-tag="True" metal:fill-slot="title">Login</span>
  </nav>
  <div class="row">
    <div class="twelve columns">
      <p>Please enter your login credentials below and you will be redirected
      back to the page you came from.</p>
      <div metal:use-macro="view.master.flashes"></div>
      ${form.begin(request.route_url('login'))}
      ${form.hidden_tag('came_from')}
      ${form.errorlist()}
      <div class="row">
        ${form.col_label('username', 'Username')}
        ${form.col_email('username', placeholder='someone@somewhere.edu')}
      </div>
      <div class="row">
        ${form.col_label('password', 'Password')}
        ${form.col_password('password', placeholder='Password')}
      </div>
      <div class="row">
        ${form.col_submit()}
      </div>
      ${form.end()}
    </div>
  </div>
  <span metal:use-macro="view.master.footer"></span>
  <span metal:use-macro="view.master.scripts"></span>
</body>
</html>

