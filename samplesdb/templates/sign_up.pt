<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Sign Up - ${project}</title>
  <meta name="description" content="New user sign up page for ${project}" />
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->
  <link rel="shortcut icon" href="${request.static_url('samplesdb:static/favicon.ico')}" />
  <link rel="stylesheet" href="${request.static_url('samplesdb:static/foundation/css/foundation.min.css')}">
  <link rel="stylesheet" href="${request.static_url('samplesdb:static/foundation/css/app.css')}">
  <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->
  <script src="${request.static_url('samplesdb:static/foundation/js/modernizr.foundation.js')}"></script>
</head>

<body>
  <nav class="top-bar">
  <ul>
    <li class="name"><h1>${project}</h1></li>
    <li class="toggle-topbar"><a href="#"></a></li>
  </ul>
  <section>
  <ul class="right">
    <li><a href="#">My Collections</a></li>
    <li><a href="#">My Account</a></li>
    <li><a href="#">Logout</a></li>
  </ul>
  </section>
  </nav>
  <div class="row">
    <div class="twelve columns">
      ${form.begin(request.route_url('sign_up'))}
      <div class="row">
        <div class="two columns">
          <label for="salutation" class="inline">Name</label>
        </div>
        <div class="one columns">
          ${form.errorlist('salutation')}
          ${form.text('salutation', size=3, autofocus='autofocus', required='required')}
        </div>
        <div class="four columns">
          ${form.errorlist('given_name')}
          ${form.text('given_name', size=20, required='required')}
        </div>
        <div class="five columns">
          ${form.errorlist('surname')}
          ${form.text('surname', size=20, required='required')}
        </div>
      </div>
      <div class="row">
        <div class="two columns">
          <label for="organization" class="inline">Organization</label>
        </div>
        <div class="ten columns">
          ${form.errorlist('organization')}
          ${form.text('organization', size=20, required='required')}
        </div>
      </div>
      <div class="row">
        <div class="two columns">
          <label for="email" class="inline">Email Address</label>
        </div>
        <div class="ten columns">
          ${form.errorlist('email')}
          ${form.text('email', type='email', size=20, required='required')}
        </div>
      </div>
      <div class="row">
        <div class="two columns">
          <label for="confirm_email" class="inline">Confirm Email</label>
        </div>
        <div class="ten columns">
          ${form.errorlist('confirm_email')}
          ${form.text('confirm_email', type='email', size=20, required='required')}
        </div>
      </div>
      <div class="row">
        <div class="two columns">
          <label for="password" class="inline">Password</label>
        </div>
        <div class="ten columns">
          ${form.errorlist('password')}
          ${form.text('password', type='password', size=20, required='required', class_='six')}
        </div>
      </div>
      <div class="row">
        <div class="two columns">
          <label for="password" class="inline">Confirm Password</label>
        </div>
        <div class="ten columns">
          ${form.errorlist('confirm_password')}
          ${form.text('confirm_password', type='password', size=20, required='required', class_='six')}
        </div>
      </div>
      <div class="row">
        <div class="twelve columns">
          ${form.submit('submit', 'Submit', class_='small button right')}
        </div>
      </div>
      ${form.end()}
    </div>
  </div>
  <div class="row">
    <div id="footer" class="twelve columns">
      Copyright &copy; <a href="mailto:dave@waveform.org.uk">Dave Hughes</a>
      2012. All rights reserved. <a
        href="https://github.com/waveform80/samplesdb">Source code</a> for this
      application is available from GitHub, licensed under the <a
        href="http://www.gnu.org/licenses/gpl-3.0.html">GNU GPL v3</a>.
    </div>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="${request.static_url("samplesdb:static/gumby/js/libs/jquery-1.7.2.min.js")}"><\/script>')</script>
  <script src="${request.static_url('samplesdb:static/webforms2/webforms2-p.js')}"></script>
  <script src="${request.static_url('samplesdb:static/foundation/js/foundation.min.js')}"></script>
  <script src="${request.static_url('samplesdb:static/foundation/js/app.js')}"></script>
</body>
</html>


