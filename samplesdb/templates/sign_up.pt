<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Sign Up - ${request.registry.settings['site_title']}</title>
  <meta name="description" content="New user sign up page for ${request.registry.settings['site_title']}" />
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->
  <link rel="shortcut icon" href="${request.static_url('samplesdb:static/favicon.ico')}" />
  <link rel="stylesheet" href="${request.static_url('samplesdb:static/foundation/css/foundation.css')}">
  <link rel="stylesheet" href="${request.static_url('samplesdb:static/foundation/css/app.css')}">
  <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->
  <script src="${request.static_url('samplesdb:static/foundation/js/modernizr.foundation.js')}"></script>
</head>

<body>
  <nav class="top-bar">
  <ul>
    <li class="name">
      <a href="${request.route_url('index')}">
        <img src="${request.static_url('samplesdb:static/logo_small.svg')}" alt="${request.registry.settings['site_title']}" />
      </a>
    </li>
    <li class="toggle-topbar"><a href="#"></a></li>
  </ul>
  <section>
  <ul class="right">
    <li><a href="#">My Collections</a></li>
    <li><a href="#">My Account</a></li>
    <li><a href="#">Logout</a></li>
  </ul>
  </section>
  </nav>
  <div class="row">
    <div class="twelve columns">
      <h1>New User</h1>
      <p>Please make sure you fill out your e-mail address accurately. We'll
      send you a confirmation e-mail with a link to activate your account when
      you submit the form.</p>
      ${form.begin(request.route_url('sign_up'))}
      ${form.csrf_token()}
      <div class="row">
        ${form.col_label('salutation', 'Name')}
        ${form.col_select('salutation', autofocus='autofocus', cols=1)}
        ${form.col_text('given_name', placeholder='First Name', cols=4)}
        ${form.col_text('surname', placeholder='Last Name', cols=5)}
      </div>
      <div class="row">
        ${form.col_label('organization', 'Organization')}
        ${form.col_text('organization')}
      </div>
      <div class="row">
        ${form.col_label('timezone', 'Timezone')}
        ${form.col_select('timezone', class_='six')}
      </div>
      <div class="row">
        ${form.col_label('email', 'Email Address')}
        ${form.col_email('email', placeholder='someone@somewhere.edu')}
      </div>
      <div class="row">
        ${form.col_label('email_confirm', 'Confirm Email')}
        ${form.col_email('email_confirm', placeholder='someone@somewhere.edu')}
      </div>
      <div class="row">
        ${form.col_label('limits_id', 'Account Type')}
        <div class="ten columns">
          ${form.radio('limits_id', 'academic', label='Academic', checked='checked')}
          ${form.radio('limits_id', 'commercial', label='Commercial (not currently available)', disabled='disabled')}
          ${form.errorlist('limits_id')}
        </div>
      </div>
      <div class="row">
        ${form.col_label('password', 'Password')}
        ${form.col_password('password', class_='six')}
      </div>
      <div class="row">
        ${form.col_label('password_confirm', 'Confirm Password')}
        ${form.col_password('password_confirm', class_='six')}
      </div>
      <div class="row">
        ${form.col_submit()}
      </div>
      ${form.end()}
    </div>
  </div>
  <div class="row">
    <div id="footer" class="twelve columns">
      Copyright &copy; <a href="mailto:dave@waveform.org.uk">Dave Hughes</a>
      2012. All rights reserved. <a
        href="https://github.com/waveform80/samplesdb">Source code</a> for this
      application is available from GitHub, licensed under the <a
        href="http://www.gnu.org/licenses/gpl-3.0.html">GNU GPL v3</a>.
    </div>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="${request.static_url("samplesdb:static/gumby/js/libs/jquery-1.7.2.min.js")}"><\/script>')</script>
  <script src="${request.static_url('samplesdb:static/webforms2/webforms2-p.js')}"></script>
  <script src="${request.static_url('samplesdb:static/foundation/js/foundation.min.js')}"></script>
  <script src="${request.static_url('samplesdb:static/foundation/js/app.js')}"></script>
</body>
</html>


